<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
 
 <servlet>
 	<servlet-name>SourceServlet</servlet-name>
 	<servlet-class>com.example.servlets.SourceServlet</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>SourceServlet</servlet-name>
 	<url-pattern>/sourceServlet</url-pattern>
 </servlet-mapping>
 
 <servlet>
 	<servlet-name>TargetServlet</servlet-name>
 	<servlet-class>com.example.servlets.TargetServlet</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>TargetServlet</servlet-name>
 	<url-pattern>/targetServlet</url-pattern>
 </servlet-mapping>
 
</web-app>